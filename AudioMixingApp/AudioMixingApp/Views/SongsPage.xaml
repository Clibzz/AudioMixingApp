<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioMixingApp.Views.SongsPage"
             Title="SongsPage">
    <VerticalStackLayout Padding="100, 100, 100, 100">
        <Label Text="Songs" FontSize="Large" />
        <StackLayout BackgroundColor="DarkSlateGrey" VerticalOptions="Center">
            <CollectionView ItemsSource="{Binding Songs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Margin="0,10,0,0" BackgroundColor="AliceBlue">
                            <Label FontSize="Large" Text="{Binding Title}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>