<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioMixingApp.Views.SongsPage"
             Title="SongsPage"
             BackgroundColor="#3F3F3F">
    <VerticalStackLayout Padding="100, 100, 100, 100">
        <Label Text="Songs" FontSize="Large" FontAttributes="Bold"/>
        <StackLayout BackgroundColor="#5F5F5F" VerticalOptions="Center">
            <CollectionView ItemsSource="{Binding Songs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#2F2F2F"
                                StrokeThickness="1"
                                HorizontalOptions="Center" WidthRequest="1720">
                            <StackLayout Margin="0,10,0,0" FlowDirection="LeftToRight">
                                <Label FontSize="Large" Text="{Binding Title}" />
                                <Label FontSize="Medium" Text="{Binding Artist}" />
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>