<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioMixingApp.Views.SongsPage"
             Title="SongsPage"
             BackgroundColor="#3F3F3F">

    <ScrollView>
        <StackLayout Padding="100,50,100,100">
            <StackLayout Orientation="Horizontal" Margin="10">
                <Label Text="Songs" FontSize="Large" FontAttributes="Bold"/>
                <Button Text="Add Song"
                    HorizontalOptions="Start"
                    Margin="10,10,0,0"
                    Padding="5"
                    WidthRequest="100"
                    CornerRadius="5"
                    Clicked="OnAddSongClicked" HeightRequest="35"/>
            </StackLayout>

            <HorizontalStackLayout>
                <Button Text="Add Song" HorizontalOptions="Start" Margin="10,10,0,10" Padding="5" WidthRequest="150" CornerRadius="0" Clicked="OnAddSongClicked"/>
                <Button Text="Add Multiple Songs" HorizontalOptions="Start" Margin="10,10,0,10" Padding="5" WidthRequest="150" CornerRadius="0" Clicked="OnAddMultipleSongsClicked"/>
            </HorizontalStackLayout>
            
            <Label Text="Songs" FontSize="Large" FontAttributes="Bold"/>
            <CollectionView ItemsSource="{Binding Songs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#2F2F2F" StrokeThickness="1" HorizontalOptions="Center" WidthRequest="1720">
                            <StackLayout BackgroundColor="#5F5F5F" Padding="10,10,10,10" FlowDirection="LeftToRight">
                                <Label FontSize="Large" Text="{Binding Title}" />
                                <Label FontSize="Medium" Text="{Binding Artist}" TextColor="Pink"/>
                                <Button Text="Add to queue" Clicked="Button_OnClicked" MaximumWidthRequest="0" HorizontalOptions="StartAndExpand" MinimumWidthRequest="1460"></Button>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
