<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioMixingApp.Views.AboutPage"
             Title="About"
             BackgroundColor="#424242">

    <VerticalStackLayout Padding="100,50,100,100">
        <Label Text="About" FontSize="Large" FontAttributes="Bold"/>
        <Border Grid.Column="0" Stroke="#9DAAAF" StrokeThickness="1" HorizontalOptions="Center">
            <Grid RowDefinitions=".40*, .60*" BackgroundColor="#292929" HeightRequest="400">
                <Label Grid.Row="0" Text="AudioMixingApp" TextColor="White" FontSize="64" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalTextAlignment="Start"/>
                <Label Grid.Row="1" Margin="50,0,50,0" Text="The AudioMixingApp has been created by Victor Peters, Yannieck Blaauw, Monique Sabong and Chris Klunder for a project for C#2" TextColor="White" FontSize="32" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="1" Margin="50" Text="A seperate file has been added to the teams environment with the controls of the application" TextColor="White" FontSize="26" HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentPage>