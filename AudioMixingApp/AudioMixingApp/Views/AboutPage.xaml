<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioMixingApp.Viewmodels.AboutPage"
             Title="About"
             BackgroundColor="DarkGray">

    <VerticalStackLayout
    Spacing="25"
    Padding="30,0"
    VerticalOptions="Start">

        <Label 
        Margin="20"
        Text="About"
        TextColor="White"
        FontSize="32"
        FontAttributes="Bold"/>

        <Grid RowDefinitions=".40*, .60*" BackgroundColor="Grey" Padding="50" HeightRequest="750">
            <Label Grid.Row="0" Text="AudioMixingApp" TextColor="White" FontSize="32" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
            <Label Grid.Row="1" Text="Created by Victor Peters, Yannieck Blaauw, Monique Sabong and Chris" TextColor="White" FontSize="32" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        </Grid>
    </VerticalStackLayout>

</ContentPage>